#!/bin/bash
ESC=$(printf '\033')

read -p "${ESC}[1;39mPress setting name: ${ESC}[m" name
mkdir ~/.config 2> /dev/null

startcolor="#aa55ff"

nameFg="#002b55"
nameBg="#bf80ff"
dirFg="#0e0e47"
dirBg="#aa55ff"
gitFg="#000080"
gitBg="#952bff"
pgFg="#769ff0"
pgBg="#6a00d5"
timeFg="#a0a9cb"
timeBg="#400080"

echo "
format = \"\"\"
[â–‘â–’â–“]($startcolor)\
[ $name ](bg:$nameBg fg:$nameFg)\
[î‚°](bg:$dirBg fg:$nameBg)\
\$directory\
[î‚°](fg:$dirBg bg:$gitBg)\
\$git_branch\
\$git_status\
[î‚°](fg:$gitBg bg:$pgBg)\
\$python\
\$nodejs\
\$rust\
\$golang\
\$php\
\$java\
\$kotlin\
[î‚°](fg:$pgBg bg:$timeBg)\
\$time\
[î‚°](fg:$timeBg)\
\\n\$character\"\"\"

[directory]
style = \"fg:$dirFg bg:$dirBg\"
format = \"[ \$path ](\$style)\"
truncation_length = 3
truncation_symbol = \"â€¦/\"

[directory.substitutions]
\"Documents\" = \"ïœ˜ \"
\"Downloads\" = \"ï€™ \"
\"Music\" = \"ï€ \"
\"Pictures\" = \"ï€¾ \"

[git_branch]
symbol = \"ï˜\"
style = \"bg:$gitBg\"
format = '[[ \$symbol \$branch ](fg:$gitFg bg:$gitBg)](\$style)'

[git_status]
style = \"bg:$gitBg\"
format = '[[(\$all_status\$ahead_behind )](fg:$gitFg bg:$gitBg)](\$style)'

[kotlin]
symbol = \"ð•‚\"
style = \"bg:$pgBg\"
format = '[[ \$symbol (\$version) ](fg:$pgFg bg:$pgBg)](\$style)'

[nodejs]
symbol = \"îž\"
style = \"bg:$pgBg\"
format = '[[ \$symbol (\$version) ](fg:$pgFg bg:$pgBg)](\$style)'

[java]
symbol = \"îœ¸\"
style = \"bg:$pgBg\"
format = '[[ \$symbol (\$version) ](fg:$pgFg bg:$pgBg)](\$style)'

[rust]
symbol = \"îž¨\"
style = \"bg:$pgBg\"
format = '[[ \$symbol (\$version) ](fg:$pgFg bg:$pgBg)](\$style)'

[golang]
symbol = \"ï³‘\"
style = \"bg:$pgBg\"
format = '[[\$symbol (\$version) ](fg:$pgFg bg:$pgBg)](\$style)'

[php]
symbol = \"î˜ˆ\"
style = \"bg:$pgBg\"
format = '[[\$symbol(\$version) ](fg:$pgFg bg:$pgBg)](\$style)'


[python]
symbol = \" îœ¼ \"
style = \"bg:$pgBg\"
format = '[[\$symbol(\$version) ](fg:$pgFg bg:$pgBg)](\$style)'

[time]
disabled = false
time_format = \"%R\" # Hour:Minute Format
